{
  "id": "/subscriptions/%%SUBSCRIPTION_GUID%%/resourceGroups/%%Ngsa_Log_Analytics_RG%%/providers/microsoft.insights/scheduledqueryrules/TooManyServerRequests-cosmos",
  "location": "westus2",
  "name": "TooManyServerRequests-cosmos",
  "properties": {
    "action": {
      "aznsAction": {
        "actionGroup": [
          "/subscriptions/%%SUBSCRIPTION_GUID%%/resourcegroups/%%Ngsa_Log_Analytics_RG%%/providers/microsoft.insights/actiongroups/%%Ngsa_Action_Group_Name%%"
        ]
      },
      "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction",
      "severity": "3",
      "throttleConsecutiveWindowCount": 0,
