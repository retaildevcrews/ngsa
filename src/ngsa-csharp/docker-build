#!/bin/bash

pushd ../..

# build test containers
docker build . -t app-test -f src/ngsa-csharp/Ngsa.App/Dockerfile --target test
docker build . -t ds-test -f src/ngsa-csharp/Ngsa.DataService/Dockerfile --target test
docker build . -t lr-test -f src/ngsa-csharp/Ngsa.LodeRunner/Dockerfile --target test

# build release containers
docker build . -t ngsa-lr -f src/ngsa-csharp/Ngsa.LodeRunner/Dockerfile
docker build . -t ngsa-ds -f src/ngsa-csharp/Ngsa.DataService/Dockerfile
docker build . -t ngsa-app -f src/ngsa-csharp/Ngsa.App/Dockerfile

popd
